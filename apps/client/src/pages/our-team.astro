---
import Layout from '../layouts/Layout.astro';
import { ContactCard } from '@unic/core-ui';
---

<Layout title="Our team">
  <div class="flex-1 mx-auto max-w-[830px] py-5 md:pt-14 md:pb-10 px-4 md:px-0">
    <h1 class="leading-none text-4xl font-semibold text-center">Our team</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 pt-5 md:pt-10 gap-6 md:gap-12">
      <ContactCard
        name="Nannan Liu"
        avatar="/nannan-liu.jpg"
        role="Marie Curie Fellow"
        description="Department of Interpreting and Translation University of Bologna"
        website="https://www.unibo.it/sitoweb/nannan.liu"
        email="nannan.liu@unibo.it"
      />
      <ContactCard
        name="Mariachiara Russo"
        avatar="/mariachiara-russo.jpg"
        role="Professor"
        description="Department of Interpreting and Translation (DIT) University of Bologna"
        descriptionWidth="w-fit"
        website="https://www.unibo.it/sitoweb/mariachiara.russo"
        email="mariachiara.russo@unibo.it"
      />
      <ContactCard
        name="Eros Zanchetta"
        role="DIT IT-Scientific Unit"
        email="eros.zanchetta2@unibo.it"
      />
      <ContactCard
        name="Piero Conficoni"
        role="DIT IT-Scientific Unit"
        email="piero.conficoni@unibo.it"
      />
    </div>
  </div>
</Layout>
