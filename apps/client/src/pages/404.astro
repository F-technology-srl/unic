---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404">
  <div
    class="mx-auto max-w-[1000px] my-5 md:my-14 bg-white p-10 min-h-[620px] shadow-sm rounded-md border-1 border-slate-50"
  >
    <div class="text-center">
      <h1 class="text-center text-4xl font-semibold">404 - Page not found</h1>
      <p class="mt-10 text-slate-700 text-base font-normal">
        <p class="text-center">
          Oops! The page you are looking for does not exist.
        </p>
        <a class="text-blue-800 hover:underline" href="/">Go to home</a>
      </p>
    </div>
  </div>
</Layout>
