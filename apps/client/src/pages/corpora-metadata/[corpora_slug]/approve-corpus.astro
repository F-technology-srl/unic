---
import Layout from '../../../layouts/Layout.astro';
import { ApproveCorpusRegistrationPage } from '@unic/client/corpora-feature';

const { corpora_slug } = Astro.params;
const token = Astro.url.searchParams.get('token') || '';
---

<Layout title="Approve corpus registration" require_login require_admin>
  <div class="flex-1 mx-auto max-w-[868px] p-10 bg-white mt-14 mb-10 w-full">
    <h1 class="leading-none text-4xl font-semibold text-center pb-10">
      Approve corpus registration
    </h1>
    <ApproveCorpusRegistrationPage
      acronym={corpora_slug ?? ''}
      token={token}
      client:only
    />
  </div>
</Layout>
