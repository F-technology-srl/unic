<%- include('partials/head'); %>
	<div style="width: 100%; margin: 0 0 64px">
		<%- include('partials/header'); %>
			<div style="width: 515px; margin: auto">
				<h1 style="
						font-family: sans-serif, Arial;
						font-size: 20px;
						font-weight: 600;
						line-height: 20px;
						letter-spacing: 0px;
						text-align: center;
						margin: 48px 0 10px;
						color: #111928;
						width: 100%;
					">
					A new registration request has arrived
				</h1>
				<p style="
						font-family: sans-serif, Arial;
						font-size: 16px;
						font-weight: 400;
						font-stretch: normal;
						line-height: 24px;
						color: #374151;
						text-align: center;
					">
					There is a new registration request with the following information:
				</p>
				<div style="
						margin: 40px 0 56px;
						padding: 20px 48px 36px;
						border-radius: 4px;
						background-color: rgba(249, 250, 251, 1);
						font-size: 16px;
						font-weight: 400;
						line-height: 24px;
						letter-spacing: 0px;
						text-align: center;
						color: #374151;
					">
					<div style="padding-bottom: 10px">
						<span style="font-weight: 600">First name:</span>
						<%= first_name %>
					</div>
					<div style="padding-bottom: 10px">
						<span style="font-weight: 600">Last name:</span>
						<%= last_name %>
					</div>
					<div style="padding-bottom: 10px">
						<span style="font-weight: 600">Profession:</span>
						<%= profession %>
					</div>
					<div style="padding-bottom: 12px">
						<span style="font-weight: 600">Institution:</span>
						<%= institution %>
					</div>
					<div style="padding-bottom: 12px">
						<span style="font-weight: 600">Email:</span>
						<%= email %>
					</div>
					<div>
						<p style="margin: 0 0 8px; font-weight: 600">Explanation of his/her planned use of the UNIC
							data:</p>
						<%= explanation %>
					</div>
				</div>
				<p style="
          color: #111928;
          font-family: sans-serif, Arial;
          font-size: 14px;
          line-height: 14px;
          font-weight: 600;
          text-align: center;
          margin-bottom: 20px;
        ">
					See all details by clicking on the button below
				</p>
				<%- include('partials/button', {cta_url: button_url, cta_text:'View the user info'}); %>
			</div>
	</div>
	<%- include('partials/footer.ejs'); %>